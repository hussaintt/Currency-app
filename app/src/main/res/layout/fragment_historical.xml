<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.HistoricalFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:layout_marginTop="100dp"
        android:background="@color/blue_dark">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/extra_blue_dark"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historical List"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/second_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="USD"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/reverse"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/first_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="USD"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/reverse"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:textColor="@color/blue_light"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="From"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/date"
                    app:layout_constraintEnd_toEndOf="@+id/first_currency"
                    app:layout_constraintStart_toStartOf="@+id/first_currency" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/second_currency"
                    app:layout_constraintStart_toStartOf="@+id/second_currency"
                    app:layout_constraintTop_toBottomOf="@+id/date" />

                <ImageView
                    android:id="@+id/reverse"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_arrow_forward_24"
                    app:layout_constraintBottom_toBottomOf="@+id/first_currency"
                    app:layout_constraintEnd_toStartOf="@+id/second_currency"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/first_currency"
                    app:layout_constraintTop_toTopOf="@+id/first_currency"
                    app:tint="@color/blue_light" />

                <TextView
                    android:id="@+id/fromValue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/extra_blue_light"
                    android:textSize="20sp"

                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintEnd_toEndOf="@+id/first_currency"
                    app:layout_constraintStart_toStartOf="@+id/first_currency"
                    app:layout_constraintTop_toTopOf="@+id/textView6" />

                <TextView
                    android:id="@+id/ToValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="8"
                    android:text="value2"
                    android:textColor="@color/extra_blue_light"
                    android:textSize="20sp"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintEnd_toEndOf="@+id/second_currency"
                    app:layout_constraintStart_toStartOf="@+id/second_currency"
                    app:layout_constraintTop_toTopOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="38sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/reverse"
                    app:layout_constraintStart_toStartOf="@+id/reverse"
                    app:layout_constraintTop_toBottomOf="@+id/reverse" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/second_currency2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="USD"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/reverse2"
                    app:layout_constraintTop_toBottomOf="@+id/textView4a" />

                <TextView
                    android:id="@+id/first_currency2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="USD"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/reverse2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2a" />

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Day"
                    android:textColor="@color/blue_light"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/textView2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="From"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/date2"
                    app:layout_constraintEnd_toEndOf="@+id/first_currency2"
                    app:layout_constraintStart_toStartOf="@+id/first_currency2" />

                <TextView
                    android:id="@+id/textView4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/second_currency2"
                    app:layout_constraintStart_toStartOf="@+id/second_currency2"
                    app:layout_constraintTop_toBottomOf="@+id/date2" />

                <ImageView
                    android:id="@+id/reverse2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_arrow_forward_24"
                    app:layout_constraintBottom_toBottomOf="@+id/first_currency2"
                    app:layout_constraintEnd_toStartOf="@+id/second_currency2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/first_currency2"
                    app:layout_constraintTop_toTopOf="@+id/first_currency2"
                    app:tint="@color/blue_light" />

                <TextView
                    android:id="@+id/fromValue2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/extra_blue_light"
                    android:textSize="20sp"

                    app:layout_constraintBottom_toBottomOf="@+id/textView6a"
                    app:layout_constraintEnd_toEndOf="@+id/first_currency2"
                    app:layout_constraintStart_toStartOf="@+id/first_currency2"
                    app:layout_constraintTop_toTopOf="@+id/textView6a" />

                <TextView
                    android:id="@+id/ToValue2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="8"
                    android:text="value2"
                    android:textColor="@color/extra_blue_light"
                    android:textSize="20sp"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6a"
                    app:layout_constraintEnd_toEndOf="@+id/second_currency2"
                    app:layout_constraintStart_toStartOf="@+id/second_currency2"
                    app:layout_constraintTop_toTopOf="@+id/textView6a" />

                <TextView
                    android:id="@+id/textView6a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="38sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/reverse2"
                    app:layout_constraintStart_toStartOf="@+id/reverse2"
                    app:layout_constraintTop_toBottomOf="@+id/reverse2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/second_currency3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="USD"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/reverse3"
                    app:layout_constraintTop_toBottomOf="@+id/textView4b" />

                <TextView
                    android:id="@+id/first_currency3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="USD"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/reverse3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2b" />

                <TextView
                    android:id="@+id/date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Day"
                    android:textColor="@color/blue_light"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"  />
                <TextView
                    android:id="@+id/textView2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="From"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/date3"
                    app:layout_constraintEnd_toEndOf="@+id/first_currency3"
                    app:layout_constraintStart_toStartOf="@+id/first_currency3" />

                <TextView
                    android:id="@+id/textView4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/second_currency3"
                    app:layout_constraintStart_toStartOf="@+id/second_currency3"
                    app:layout_constraintTop_toBottomOf="@+id/date3" />

                <ImageView
                    android:id="@+id/reverse3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_arrow_forward_24"
                    app:layout_constraintBottom_toBottomOf="@+id/first_currency3"
                    app:layout_constraintEnd_toStartOf="@+id/second_currency3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/first_currency3"
                    app:layout_constraintTop_toTopOf="@+id/first_currency3"
                    app:tint="@color/blue_light" />

                <TextView
                    android:id="@+id/fromValue3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/extra_blue_light"
                    android:textSize="20sp"

                    app:layout_constraintBottom_toBottomOf="@+id/textView6b"
                    app:layout_constraintEnd_toEndOf="@+id/first_currency3"
                    app:layout_constraintStart_toStartOf="@+id/first_currency3"
                    app:layout_constraintTop_toTopOf="@+id/textView6b" />

                <TextView
                    android:id="@+id/ToValue3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="8"
                    android:text="value2"
                    android:textColor="@color/extra_blue_light"
                    android:textSize="20sp"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6b"
                    app:layout_constraintEnd_toEndOf="@+id/second_currency3"
                    app:layout_constraintStart_toStartOf="@+id/second_currency3"
                    app:layout_constraintTop_toTopOf="@+id/textView6b" />

                <TextView
                    android:id="@+id/textView6b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="38sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/reverse3"
                    app:layout_constraintStart_toStartOf="@+id/reverse3"
                    app:layout_constraintTop_toBottomOf="@+id/reverse3" />
            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >

        </LinearLayout>
    </LinearLayout>



